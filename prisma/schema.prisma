// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                    String    @id
  name                  String
  email                 String
  emailVerified         Boolean   @default(false)
  image                 String?
  phone                 String?
  emergencyContactName  String?
  emergencyContactPhone String?
  nationality           String?
  nic                   String?
  passport              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @default(now()) @updatedAt
  sessions              Session[]
  accounts              Account[]
  bookings              Booking[]
  invoices              Invoice[]
  isAnonymous           Boolean   @default(false) // Added for better-auth anonymous plugin
  // Add role field with default value
  role                  String    @default("user") // "admin" or "user"

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@map("verification")
}

// Booking model for tracking customer bookings
model Booking {
  id String @id

  // Core session relationship (REQUIRED)
  sessionId String
  session   EventSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  // Denormalized fields for historical record (snapshot at booking time)
  eventName String // Event name at time of booking
  eventDate DateTime // Session date at time of booking

  // Customer information
  customerName    String
  customerEmail   String
  customerPhone   String
  numberOfPeople  Int     @default(1)
  specialRequests String?

  // Booking metadata
  bookingDate DateTime @default(now())
  status      String   @default("pending") // pending, confirmed, cancelled

  // Financial information
  totalPrice     Float @default(0)
  ojasenFee      Float @default(0)
  facilitatorFee Float @default(0)

  // Relationships
  facilitatorId   String?
  facilitatorName String? // Cached for performance
  facilitator     Facilitator? @relation(fields: [facilitatorId], references: [id])
  userId          String?
  user            User?        @relation(fields: [userId], references: [id])
  invoice         Invoice?     @relation(fields: [invoiceId], references: [id])
  invoiceId       String?

  // Additional customer details
  nationality String?
  nic         String?
  passport    String?

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("booking")
}

// Facilitator model for tracking service providers
model Facilitator {
  id             String          @id
  name           String
  role           String
  email          String
  phone          String?
  baseFee        Float           @default(0)
  commission     Float           @default(0) // Percentage of service fee
  bookings       Booking[]
  sessions       EventSession[] // Sessions assigned to this facilitator
  purchaseOrders PurchaseOrder[]
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt

  @@map("facilitator")
}

// Invoice model for tracking customer invoices
model Invoice {
  id             String    @id
  invoiceNumber  String    @unique
  customerId     String?
  customerName   String
  customerEmail  String
  customerPhone  String?
  billingAddress String?
  issueDate      DateTime  @default(now())
  dueDate        DateTime
  status         String    @default("draft") // draft, sent, paid, overdue, cancelled
  subtotal       Float
  taxAmount      Float     @default(0)
  totalAmount    Float
  amountPaid     Float     @default(0)
  amountDue      Float
  currency       String    @default("LKR")
  notes          String?
  terms          String?
  user           User?     @relation(fields: [customerId], references: [id])
  bookings       Booking[]
  payments       Payment[]
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  @@map("invoice")
}

// Purchase Order model for tracking payments to facilitators
model PurchaseOrder {
  id            String      @id
  poNumber      String      @unique
  facilitatorId String
  facilitator   Facilitator @relation(fields: [facilitatorId], references: [id])
  issueDate     DateTime    @default(now())
  dueDate       DateTime
  status        String      @default("draft") // draft, sent, paid, overdue, cancelled
  subtotal      Float
  taxAmount     Float       @default(0)
  totalAmount   Float
  amountPaid    Float       @default(0)
  amountDue     Float
  currency      String      @default("LKR")
  notes         String?
  terms         String?
  payments      Payment[]
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  @@map("purchase_order")
}

// Payment model for tracking payments (both incoming and outgoing)
model Payment {
  id              String         @id
  paymentNumber   String         @unique
  invoiceId       String?
  invoice         Invoice?       @relation(fields: [invoiceId], references: [id])
  purchaseOrderId String?
  purchaseOrder   PurchaseOrder? @relation(fields: [purchaseOrderId], references: [id])
  amount          Float
  currency        String         @default("LKR")
  paymentDate     DateTime       @default(now())
  paymentMethod   String // cash, bank_transfer, credit_card, etc.
  status          String         @default("completed") // pending, completed, failed, refunded
  referenceNumber String?
  notes           String?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  @@map("payment")
}

// Campaign model for tracking marketing campaigns
model Campaign {
  id               String   @id
  name             String
  type             String // discount, bundle, referral, loyalty
  status           String   @default("draft") // draft, active, scheduled, paused, completed
  startDate        DateTime
  endDate          DateTime
  discount         Float    @default(0) // Percentage discount
  usageCount       Int      @default(0)
  revenueGenerated Float    @default(0)
  targetAudience   String // All Customers, Returning Customers, New Customers, Loyalty Members
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@map("campaign")
}

// Event model for defining event types/templates
model Event {
  id              String         @id
  title           String
  description     String
  fullDescription String?
  category        String? // Yoga, Healing, Sound Healing, Ceremonies, etc.
  image           String?
  defaultPrice    Float          @default(0)
  defaultLocation String?
  status          String         @default("active") // active, inactive, archived
  sessions        EventSession[]
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  @@map("event")
}

// EventSession model for specific scheduled instances of events
model EventSession {
  id String @id

  // Parent event relationship
  eventId String
  event   Event  @relation(fields: [eventId], references: [id], onDelete: Cascade)

  // Scheduling details
  date     DateTime
  time     String
  location String // Can override event defaultLocation
  price    Float // Can override event defaultPrice

  // Capacity management
  capacity Int       @default(20)
  bookings Booking[] // One session â†’ many bookings

  // Optional overrides
  title       String? // Override event title if needed
  description String? // Additional session-specific details

  // Facilitator assignment
  facilitatorId   String?
  facilitatorName String? // Cached for performance
  facilitator     Facilitator? @relation(fields: [facilitatorId], references: [id])

  // Status tracking
  status String @default("active") // active, cancelled, completed, full

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("event_session")
}
